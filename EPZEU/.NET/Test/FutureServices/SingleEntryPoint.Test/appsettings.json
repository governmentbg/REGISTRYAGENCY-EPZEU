{
  "EPZEU": {
    "GL_IDSRV_URL": "https://login.qa.epzeu.dev.local/",

    // Тези ключове се ползват САМО по време на разработка ЛОКАЛНО на машините. НЕ трябва да ходи на сървъра!
    "CR_REGISTER_API": "https://api-cr.qa.epzeu.dev.local/",
    // Тези ключове се ползват САМО по време на разработка ЛОКАЛНО на машините. НЕ трябва да ходи на сървъра!

    "httpClients": {
      "epzeu.api": {
        "auth": {
          "requiredScopes": "epzeu.api",
          "authenticationClientID": "defaultClient",
          "DelegateIfHasSubject": "true"
        }
      },
      "integration.epzeu.api": {
        "auth": {
          "requiredScopes": "integration.epzeu.api",
          "authenticationClientID": "defaultClient",
          "DelegateIfHasSubject": "true"
        }
      },
      "payments.api": {
        "auth": {
          "requiredScopes": "api.payments.obligations api.payments.transactions api.payments.reporting api.payments.paymentorders",
          "authenticationClientID": "defaultClient",
          "DelegateIfHasSubject": "true"
        }
      }
    },
    "httpAuthenticationClients": {
      "clients": {
        "defaultClient": {
          "ClientID": "epzeu.cr.api.client",
          "ClientSecret": "epzeu.cr.api.client.secret"
        }
      }
    }
  },
  "IdentityTokenApi": "https://login.dev.epzeu.dev.local/connect/token",
  "Authentication": {
    "ClientId": "epzeu.cr.api.client",
    "ClientSecret": "epzeu.cr.api.client.secret",
    "Scope": "integration.epzeu.api"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Tmp\\EPZEU\\FutureServices\\SingleEntryPoint.Test\\log.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}{NewLine}\t{Message:lj} {Exception}{NewLine}{NewLine}",
          "rollingInterval": "Hour"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}